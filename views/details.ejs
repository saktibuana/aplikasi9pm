<%- include('header.ejs') %>
        <title>Details Articles</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <style>
            body {font-family: "Lato", sans-serif}
            .mySlides {display: none}
        </style>
    </head>
    <body>
        <%- include('navbar.ejs') %>
        <!-- Header -->
<header class="w3-display-container w3-content w3-wide" style="max-width:1500px;" id="home">
    <% const imageDetail = detail[0].title + ".jpg" %>
    <img class="w3-image" src="/images/<%= imageDetail %>" alt="Architecture" width="1500" height="800">
    <div class="w3-display-middle w3-margin-top w3-center">
      <h1 class="w3-xxlarge w3-text-white"><span class="w3-padding w3-black w3-opacity-min"><b>Wonderfull</b></span> <span class="w3-hide-small w3-text-light-grey">Indonesia</span></h1>
    </div>
  </header>
    <!-- Page content -->
    <!-- The Band Section -->
    <div class="w3-container w3-content w3-center w3-padding-64" style="max-width:800px" id="band">
      <h2 class="w3-wide"><%= detail[0].title %></h2>
      <p class="w3-opacity"><i>We love travelling</i></p>
      <p class="w3-justify"><%= detail[0].description %></p>  
      <div class="w3-row-padding">
        <div class="w3-col m12">
          <div class="w3-card w3-round w3-white">
            <div class="w3-container w3-padding">
              <h6 class="w3-opacity">Ulasan-ulasan:</h6>
              <% for(let i = 0; i < detail.length; i++) { %>
                <p contenteditable="true" class="w3-border w3-padding"><%= detail[i].comment %></p>
              <% } %>
              <h6 class="w3-opacity">Tambahkan ulasan</h6>
              <% console.log("Ini memastikan") %>
              <% console.log(locals.userID) %>
              <% console.log(detail[0].blog_id) %>
              <% if(locals.isLoggedIn) { %>
                <form action="/new-comment/<%= detail[0].blog_id %>" method="post" class="new-comment">
                  <input type="text" name="newComment">
                  <input type="submit" value="Kirim"> 
                </form>
              <% } %>
              <% if(locals.isLoggedIn === false) { %>
                <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                  <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                  </symbol>
                  <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
                  </symbol>
                  <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                  </symbol>
                </svg>
                <div class="alert alert-warning d-flex align-items-center" role="alert">
                  <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                  <div>
                    Tidak bisa menambahkan ulasan
                  </div>
                </div>
                <div class="alert alert-info" role="alert">
                  <a href="/users/signup" class="alert-link">Tambah ulasan</a>. Give it a click if you want to share your comments, <b>but Register or Login first</b>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
<%- include('footer.ejs') %>